using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class RandomAmmo : MonoBehaviour
{
    public GameObject airdropPrefab;
    public Shotgun shotgunScript;

    private void Start()
    {
        InvokeRepeating("SpawnAirdrop", 10f, 100f);
    }

    void SpawnAirdrop()
    {
        Vector3 randomPosition = new Vector3(Random.Range(-10f, 10f), 1f, Random.Range(-10f, 10f));
        GameObject airdrop = Instantiate(airdropPrefab, randomPosition, Quaternion.identity);
    }

}
